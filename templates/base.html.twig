	<link rel="stylesheet" type="text/css" href="/../public/css/style.css">
</head>
<body>
	<div class="wrapper">
		<header><img src="/../public/images/interface/head.jpg"></header>
		<nav>
			<ul>
				<li class="logo">
					<img src="/../public/images/interface/logo.png">
					<div class="nav-toggle">
						<i class="fa fa-bars color-white" aria-hidden="true"></i>
					</div>
				</li>
				<li><a href="{{ path('content_list') }}">КОНТЕНТ</a></li>
				<li><a href="{{ path('guestbook') }}">ГОСТЕВАЯ</a></li>
